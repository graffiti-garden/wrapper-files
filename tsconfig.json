{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "plugins": [{ "name": "@vue/typescript-plugin" }],
    "declarationDir": "dist/types"
  },
  "include": ["src"],
  "exclude": ["src/vue"]
}
